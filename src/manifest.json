{
  "manifest_version": 3,
  "name": "AfreecaTV Bandal",
  "content_scripts": [
    {
      "matches": [
        "https://www.afreecatv.com/",
        "https://play.afreecatv.com/*",
        "https://myapi.afreecatv.com/*"
      ],
      "js": ["src/index.ts"]
    }
  ],
  "background": {
    "{{chrome}}.service_worker": "src/background.ts"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  }
}
